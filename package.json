{
	"name": "vscode-vba",
	"displayName": "VBA",
	"description": "Visual Basic language support for VS Code.",
	"version": "0.1.0",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/serkonda7/vscode-vba"
	},
	"publisher": "serkonda7",
	"engines": {
		"vscode": "^1.56.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:vba"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "vba",
				"aliases": [
					"VBA"
				],
				"extensions": [
					".bas",
					".cls",
					".frm"
				],
				"configuration": "./vba.configuration.json"
			}
		],
		"grammars": [
			{
				"language": "vba",
				"scopeName": "source.vba",
				"path": "./syntaxes/vba.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint .",
		"test": "vscode-tmgrammar-test -s source.vba -g syntaxes/vba.tmLanguage.json -t \"syntaxes/tests/*.bas\"",
		"package": "vsce package"
	},
	"devDependencies": {
		"@types/node": "14.17.20",
		"@types/vscode": "^1.56.0",
		"@typescript-eslint/eslint-plugin": "^4.33",
		"@typescript-eslint/parser": "^4.33",
		"eslint": "^7.32",
		"typescript": "^4.4.3",
		"vsce": "^1.100.1",
		"vscode-tmgrammar-test": "^0.0.11"
	}
}
