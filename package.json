{
	"name": "vscode-vba",
	"displayName": "VBA",
	"description": "Visual Basic for Applications support for VS Code.",
	"icon": "images/icon_256x256.png",
	"version": "0.3.1-dev",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/serkonda7/vscode-vba"
	},
	"publisher": "serkonda7",
	"engines": {
		"vscode": "^1.56.0"
	},
	"categories": [
		"Formatters",
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:vba"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "vba",
				"aliases": [
					"VBA"
				],
				"extensions": [
					".bas",
					".cls",
					".frm"
				],
				"configuration": "./out/language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "vba",
				"scopeName": "source.vba",
				"path": "./out/vba.tmGrammar.json"
			}
		]
	},
	"scripts": {
		"compile": "tsc -p ./",
		"lint": "eslint .",
		"test": "vscode-tmgrammar-test -g ./out/vba.tmGrammar.json \"syntaxes/tests/*.bas\"",
		"install-dev-ext": "npm run test && vsce package -o ./out/vscode-vba-dev.vsix && code --install-extension ./out/vscode-vba-dev.vsix --force",
		"package": "vsce package",
		"convert-yaml": "yaml2json language-configuration.yml syntaxes/vba.tmGrammar.yml",
		"pretest": "npm run convert-yaml",
		"postinstall-dev-ext": "echo 'Please reload the window (run `>reload window` from command palette)'",
		"vscode:prepublish": "npm run compile && npm run convert-yaml"
	},
	"devDependencies": {
		"@serkonda7/yaml2json": "^0.2.0",
		"@types/node": "^14.18.18",
		"@types/vscode": "~1.56.0",
		"@typescript-eslint/eslint-plugin": "^5.26.0",
		"@typescript-eslint/parser": "^5.26.0",
		"eslint": "^8.16.0",
		"typescript": "~4.6.4",
		"vsce": "^2.8.0",
		"vscode-tmgrammar-test": "~0.1.1"
	}
}
