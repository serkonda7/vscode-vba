{
  "name": "vscode-vba",
  "displayName": "VBA",
  "description": "VBA and VB6 tooling, syntax highlighting and snippets.",
  "icon": "images/icon.png",
  "version": "1.1.0-dev",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/serkonda7/vscode-vba"
  },
  "publisher": "serkonda7",
  "categories": [
    "Programming Languages",
    "Snippets",
    "Language Packs"
  ],
  "keywords": [
    "VB6",
    "VBA",
    "WWB"
  ],

  "main": "./src/main.js",
  "browser": "./src/main.js",

  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    }
  },

  "activationEvents": [
    "workspaceContains:**/*.{docm,xlsm,pptm,xlam,ppam}"
  ],
  "contributes": {
    "languages": [
      {
        "id": "vb6",
        "aliases": [
          "Visual Basic 6"
        ],
        "extensions": [
          ".ctl",
          ".dsr"
        ],
        "configuration": "./out/language-configuration.json"
      },
      {
        "id": "vba",
        "aliases": [
          "Visual Basic for Applications"
        ],
        "extensions": [
          ".bas",
          ".cls",
          ".frm",
          ".vba",
          ".doccls"
        ],
        "configuration": "./out/language-configuration.json",
        "icon": {
          "light": "./images/vba-logo-light.svg",
          "dark": "./images/vba-logo-dark.svg"
        }
      },
      {
        "id": "wwb",
        "aliases": [
          "WinWrap Basic"
        ],
        "extensions": [
          ".wwd"
        ],
        "configuration": "./out/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "vb6",
        "scopeName": "source.vb6",
        "path": "./out/vb6.json"
      },
      {
        "language": "vba",
        "scopeName": "source.vba",
        "path": "./out/vba.json"
      },
      {
        "language": "wwb",
        "scopeName": "source.wwb",
        "path": "./out/wwb.json"
      }
    ],
    "snippets": [
      {
        "language": "vba",
        "path": "./out/snippets.json"
      },
      {
        "language": "vb6",
        "path": "./out/snippets.json"
      },
      {
        "language": "wwb",
        "path": "./out/snippets.json"
      }
    ],
    "commands": [
      {
        "command": "vba.extract_from_doc",
        "title": "VBA: Extract code from office document."
      },
      {
        "command": "vba.write_to_doc",
        "title": "VBA: Write code to office document."
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "vba.extract_from_doc",
          "when": "false"
        },
        {
          "command": "vba.write_to_doc",
          "when": "false"
        }
      ],
      "explorer/context": [
        {
          "command": "vba.extract_from_doc",
          "when": "resourceExtname in vba.ctx.docExts",
          "group": "2_workspace"
        },
        {
          "command": "vba.write_to_doc",
          "when": "resourceExtname in vba.ctx.docExts",
          "group": "2_workspace"
        }
      ]
    }
  },

  "scripts": {
    "test": "pnpm run convert-yaml && pnpm run test:all",
    "test:all": "pnpm run test:vba && pnpm run test:vb6 && pnpm run test:wwb",
    "test:vba": "vscode-tmgrammar-test -g ./out/vba.json \"syntaxes/tests/vba/*.bas\"",
    "test:vb6": "vscode-tmgrammar-test -g ./out/vb6.json \"syntaxes/tests/vb6/*.bas\"",
    "test:wwb": "vscode-tmgrammar-test -g ./out/wwb.json \"syntaxes/tests/wwb/*.wwd\"",

    "package": "vsce package",
    "package:dev": "vsce package -o ./out/vscode-vba-dev.vsix",
    "install:dev": "pnpm run package:dev && code --install-extension ./out/vscode-vba-dev.vsix --force",

    "convert-yaml": "node ./scripts/convert_yaml.js",
    "vscode:prepublish": "pnpm run convert-yaml"
  },

  "engines": {
    "node": ">=18",
    "vscode": "^1.82.0"
  },
  "packageManager": "pnpm@10.15.1+sha512.34e538c329b5553014ca8e8f4535997f96180a1d0f614339357449935350d924e22f8614682191264ec33d1462ac21561aff97f6bb18065351c162c7e8f6de67",
  "devDependencies": {
    "@vscode/vsce": "~3.6.2",
    "js-yaml": "~4.1.0",
    "vscode-tmgrammar-test": "~0.1.3"
  }
}
