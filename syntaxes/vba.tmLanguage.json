{
	"scopeName": "source.vba",
	"fileTypes": [
		".bas",
		".cls",
		".frm"
	],
	"patterns": [
		{ "include": "#comments" },
		{ "include": "#storage" }
	],
	"repository": {
		"comments": {
			"name": "comment.line",
			"begin": "'",
			"end": "$"
		},
		"storage": {
			"name": "storage.visibility",
			"match": "\\b(Public|Private)\\b"
		}
	}
}
