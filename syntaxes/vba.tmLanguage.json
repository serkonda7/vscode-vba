{
	"scopeName": "source.vba",
	"fileTypes": [
		".bas",
		".cls",
		".frm"
	],
	"patterns": [
		{ "include": "#comments" },
		{ "include": "#keywords" },
		{ "include": "#numbers" },
		{ "include": "#options" },
		{ "include": "#strings" },
		{ "include": "#types" },
		{
			"name": "entity.name.function.vba",
			"match": "(?i:\\b[a-zA-Z][a-zA-Z0-9_]*\\b)(?=\\(\\)?)"
		}
	],
	"repository": {
		"comments": {
			"name": "comment.line.quote",
			"begin": "'",
			"end": "$"
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.conditional.vba",
					"match": "(?i:\\b(Array|Else(If)?|For( Each)?|(I)?If|In|New|Then|To|Step|With)\\b)"
				},
				{
					"name": "keyword.conditional.end.vba",
					"match": "(?i:\\bEnd (If|With)|Next\\b)"
				},
				{
					"name": "keyword.control.vba",
					"match": "(?i:\\b(As|And|By(Ref|Val)|Is|Like|Mod|Not|Optional|Or|Xor)\\b)"
				},
				{
					"name": "keyword.$1.vba",
					"match": "(?i:\\b(Attribute|End( (Function|Property|Sub))?|((Private|Public|Static) )?(Const|Function|Property|Sub))\\b)"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.language.vba",
					"match": "(?i:\\b(Empty|False|Nothing|Null|True)\\b)"
				},
				{
					"name": "constant.numeric.vba",
					"match": "-?(&(?i:H[\\dA-F]+|O[0-7])|\\d+(\\.\\d+|#)?)"
				}
			]
		},
		"options": {
			"patterns": [
				{
					"name": "storage.declaration.vba",
					"match": "(?i:\\b(C(all|lass|onst)|Dim|(G|L|S)et|ReDim( Preserve)?)\\b)"
				},
				{
					"name": "storage.option.vba",
					"match": "(?i:\\bOption (Base [01]|Compare (Binary|Text)?|Explicit|Private Module)\\b)"
				}
			]
		},
		"strings": {
			"name": "string.quoted",
			"begin": "\"",
			"end": "\""
		},
		"types": {
			"name": "support.type.$1",
			"match": "\\b(B(yte|oolean)|C(urrency|ollection)|D(ate|ouble)|Integer|Long(Long|Ptr)?|Object|S(ingle|tring)|Variant)\\b"
		}
	}
}
