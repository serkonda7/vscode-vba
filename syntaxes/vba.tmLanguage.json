{
	"scopeName": "source.vba",
	"fileTypes": [
		".bas",
		".cls",
		".frm"
	],
	"patterns": [
		{ "include": "#comments" },
		{ "include": "#keywords" },
		{ "include": "#numbers" },
		{ "include": "#option" },
		{ "include": "#strings" },
		{ "include": "#types" },
		{ "include": "#visibility" }
	],
	"repository": {
		"comments": {
			"name": "comment.line.quote",
			"begin": "'",
			"end": "$"
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.$1.vba",
					"match": "\\b(As|Attribute|Const|Dim|Function|New|Nothing|Set|Sub|End)\\b"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.decimal",
					"match": "([0-9]+)(\\.)([0-9]+)(D|R|F)?"
				},
				{
					"name": "constant.numeric.integer",
					"match": "(([0-9]+)([_]?))+"
				}
			]
		},
		"option": {
			"name": "storage.modifier.option",
			"match": "\\b(Option (Explicit|Private Module|Base|(Compare (Binary|Text)+))?)\\b"
		},
		"strings": {
			"name": "string.quoted",
			"begin": "\"",
			"end": "\""
		},
		"types": {
			"name": "support.type.$1",
			"match": "\\b(Boolean|Byte|Char|Date|Decimal|Double|Integer|Long|Object|SByte|Short|Single|String|UInteger|ULong|UShort)\\b"
		},
		"visibility": {
			"name": "storage.modifier.visibility",
			"match": "\\b(Public|Private|Optional)\\b"
		}
	}
}
