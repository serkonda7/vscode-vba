{
	"scopeName": "source.vba",
	"fileTypes": [
		".bas",
		".cls",
		".frm"
	],
	"patterns": [
		{ "include": "#comments" },
		{ "include": "#keywords" },
		{ "include": "#numbers" },
		{ "include": "#option" },
		{ "include": "#strings" },
		{ "include": "#types" },
		{ "include": "#visibility" },
		{
			"name": "entity.name.function.vba",
			"match": "(?i:\\b[a-zA-Z][a-zA-Z0-9_]*\\b)(?=\\(\\)?)"
		}
	],
	"repository": {
		"comments": {
			"name": "comment.line.quote",
			"begin": "'",
			"end": "$"
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.$1.vba",
					"match": "\\b(As|Attribute|Call|Const|Dim|Function|New|Nothing|Set|Sub)\\b"
				},
				{
					"name": "keyword.End.vba",
					"match": "\\bEnd (Sub|Function)\\b"
				},
				{
					"name": "keyword.control.$1.vba",
					"match": "\\b(Each|For|In|Next|With)\\b"
				},
				{
					"name": "keyword.control.End.vba",
					"match": "\\bEnd (With)\\b"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.hexadecimal",
					"match": "(?i)&H([0-9A-F]+[_]?)+"
				},
				{
					"name": "constant.numeric.octal",
					"match": "(?i)&O([0-7]+[_]?)+"
				},
				{
					"name": "constant.numeric.binary",
					"match": "(?i)&B([0-1]+[_]?)+"
				},
				{
					"name": "constant.numeric.decimal",
					"match": "[0-9]+\\.[0-9]+(D|R|F)?"
				},
				{
					"name": "constant.numeric.integer",
					"match": "(?i)([0-9]+[_]?)+(UI|UL|US)?"
				}
			]
		},
		"option": {
			"name": "storage.modifier.option",
			"match": "\\b(Option (Explicit|Private Module|Base|(Compare (Binary|Text)+))?)\\b"
		},
		"strings": {
			"name": "string.quoted",
			"begin": "\"",
			"end": "\""
		},
		"types": {
			"name": "support.type.$1",
			"match": "\\b(Boolean|Byte|Char|Date|Decimal|Double|Integer|Long|Object|SByte|Short|Single|String|UInteger|ULong|UShort)\\b"
		},
		"visibility": {
			"name": "storage.modifier.visibility",
			"match": "\\b(Public|Private|Optional)\\b"
		}
	}
}
